{
  "uid": "kairos-overview",
  "title": "Kairos Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "tags": ["kairos", "observability"],
  "time": { "from": "now-15m", "to": "now" },
  "timepicker": {},
  "annotations": { "list": [] },
  "templating": { "list": [] },
  "panels": [
    {
      "type": "timeseries",
      "title": "CLI invocations /s",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(kairos_cli_command_invocations_total[5m])) by (command)",
          "legendFormat": "{{command}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Postgres OHLCV load p95 (ms)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(kairos_infra_postgres_load_ohlcv_ms_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Postgres pool get p95 (ms)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(kairos_infra_postgres_pool_get_ms_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Postgres errors /s",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(kairos_infra_postgres_load_ohlcv_errors_total[5m])) by (stage)",
          "legendFormat": "{{stage}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Agent errors /s (by endpoint + kind)",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(kairos_infra_agent_errors_total[5m])) by (endpoint, kind)",
          "legendFormat": "{{endpoint}}/{{kind}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Agent retries /s",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(kairos_infra_agent_retries_total[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Sentiment load errors /s (format/policy/stage)",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(kairos_infra_sentiment_load_errors_total[5m])) by (format, policy, stage)",
          "legendFormat": "{{format}}/{{policy}}/{{stage}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Artifact writes p95 (ms)",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(kairos_infra_artifacts_write_ms_bucket[5m])) by (le, kind))",
          "legendFormat": "{{kind}}"
        }
      ]
    }
  ]
}
