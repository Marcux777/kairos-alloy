{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kairos-alloy.local/schemas/agent/v1/response_batch.schema.json",
  "title": "Kairos Alloy Agent ActionBatchResponse (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["action_type", "size"],
        "properties": {
          "action_type": { "type": "string", "enum": ["BUY", "SELL", "HOLD"] },
          "size": { "type": "number", "minimum": 0 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "model_version": { "type": "string" },
          "latency_ms": { "type": "integer", "minimum": 0 }
        }
      }
    }
  }
}

