{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kairos-alloy.local/schemas/agent/v1/response.schema.json",
  "title": "Kairos Alloy Agent ActionResponse (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["action_type", "size"],
  "properties": {
    "action_type": {
      "type": "string",
      "enum": ["BUY", "SELL", "HOLD"]
    },
    "size": {
      "type": "number",
      "minimum": 0
    },
    "confidence": {
      "type": ["number", "null"],
      "minimum": 0,
      "maximum": 1
    },
    "reason": {
      "type": ["string", "null"]
    },
    "model_version": { "type": ["string", "null"] },
    "latency_ms": { "type": ["integer", "null"], "minimum": 0 }
  }
}
